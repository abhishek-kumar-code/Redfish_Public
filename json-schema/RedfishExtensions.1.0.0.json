{
    "$schema": "http://schemas.dmtf.org/redfish/v1/redfish-schema.1.0.0.json",
    "title": "RedfishExtensions.1.0.0",
    "definitions":{
        "PropertyPattern":{
            "type": "object",
            "patternProperties": { 
                "^([a-zA-Z_][a-zA-Z0-9_])?@(odata|redfish|Message|Privileges).[a-zA-Z_][a-zA-Z0-9_.]$" : {
                    "type": ["array", "boolean", "number", "null", "object", "string"],
                    "description": "This property shall specify a valid odata or redfish property."
                }
            },
            "additionalProperties": false,
            "properties": {
                "Pattern": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "The pattern that the property name shall match"
                },
                "Type": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "The type that the name shall have"
                }
            }
        }
    },
