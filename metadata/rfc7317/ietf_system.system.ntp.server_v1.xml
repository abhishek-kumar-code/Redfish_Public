        <Property Name="prefer" Type="Edm.Boolean" DefaultValue="false" >
          <Annotation Term="Redfish.Yang.NodeType" EnumMember="Redfish.Yang.NodeTypes/leaf" />
          <Annotation Term="Redfish.Yang.YangType" EnumMember="Redfish.Yang.YangTypes/boolean" />
          <Annotation Term="OData.Permissions" EnumMember="OData.Permission/ReadWrite"/>
          <Annotation Term="OData.Description" String="Indicates whether this server should be preferred or not." />
        </Property>
      </EntityType>

      <EnumType Name="association_typeType">
        <Member Name="server" Value="0">
          <Annotation Term="Redfish.Yang.enum" String="server"/>
        </Member>
        <Member Name="peer" Value="1">
          <Annotation Term="Redfish.Yang.enum" String="peer"/>
        </Member>
        <Member Name="pool" Value="2">
          <Annotation Term="Redfish.Yang.enum" String="pool"/>
        </Member>
